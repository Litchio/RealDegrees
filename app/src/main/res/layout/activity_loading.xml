<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".activities.LoadingActivity">

    <ImageView
        android:id="@+id/loading_iv_logo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="1"
        android:contentDescription="@string/generalContentDescription"
        app:srcCompat="@drawable/logo_rd_loading" />

    <ImageView
        android:id="@+id/loading_iv_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:contentDescription="@string/generalContentDescription"
        app:srcCompat="@drawable/logo_rd_font" />

    <TextView
        android:id="@+id/loading_tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center|center_horizontal|fill_vertical"
        android:text="@string/loading_product"
        android:textColor="@color/layoutColor" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:contentDescription="@string/generalContentDescription"
        app:srcCompat="@drawable/logo_his" />
</LinearLayout>